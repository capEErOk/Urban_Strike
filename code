player = Helicopter("ball.png", 400, 300, 50, 50, 20)
landscape = Map("map1.png", 0 , 0, 1800, 1200, 0)

game_process = True
while game_process:
    for e in pygame.event.get():
        if e.type == pygame.QUIT:
            game_process = False

    landscape.reset()
    player.reset()
    

    landscape.update()
    player.update()
    

    pygame.display.update()
    clock.tick(40)
